# Redmine Configuration
REDMINE_URL=https://your-redmine.com
REDMINE_USERNAME=your-username
REDMINE_PASSWORD=your-password
# or use API key
# REDMINE_API_KEY=your-api-key

# MCP Server Configuration
MCP_SERVER_URL=http://redmine-mcp-server:8000
MCP_USERNAME=mcp-user
MCP_PASSWORD=mcp-password

# AI Configuration
ANTHROPIC_API_KEY=your-anthropic-api-key
EVALUATION_MODEL=claude-opus-4
MAX_TOKENS=4096

# ClickHouse Configuration (optional - for analytics)
CLICKHOUSE_URL=http://clickhouse:8123
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=your-clickhouse-password
CLICKHOUSE_DATABASE=mnoc_prod

# Service Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8001
POLL_INTERVAL=60

# Logging
LOG_LEVEL=INFO

# Projects to evaluate (comma-separated)
PROJECT_IDENTIFIERS=project1,project2
